<div class="text-center mb-5 mt-3">
  <h1><%= @category.name %></h1>
</div>
<div class="container">
  <div class="row row-cols-1 row-cols-md-3">
    <% @category.items.each do |item| %>
     <% if !item.is_archived %>
      <%= render 'items/card', item: item %>
     <% end %> 
    <% end %>
  </div>
</div>
