<%= render 'jumbotron_show'%>

<div class="container">
  <div class="row justify-content-center mb-4 mt-3">
    <h1>Nos articles</h1>
  </div>
  <div class="row justify-content-center mb-5 mt-1" >
    <%= link_to "Ajouter un produit Ã  ma boutique", new_item_path(:shop_id => @shop.id), :class=>"fas fa-store" %>
  </div>
  <div class="row mb-3">
    <% @shop.items.each do |item| %>
      <% if !item.is_archived %>
        <div class="col-3 text-center" id="grid-col-<%= item.id %>">
          <h6 class="small-container"><%= item.name %></h6>
          <%= render 'items/card', item: item %>
          <div class="column">
            <%= link_to "Modifier le produit", edit_item_path(item.id), :class => "btn btn-info mb-3"%>
            <h5>Ajuster mon stock</h5>
            <%= render 'items/plus_minus_quantity_available', item: item %>
            <%= button_to "Archiver cet objet", item_path(item.id), :method => :delete, :class => "btn btn-danger mb-3" %>
          
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
