<%= render 'jumbotron_category', category: @category %>

<div class="container">
  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3">
    <% @category.items.each do |item| %>
     <% if !item.is_archived %>
     <div class="text-center col justify-content-center d-flex" id="grid-col-<%= item.id %>">
      <%= render 'items/card', item: item %>
      </div>
     <% end %> 
    <% end %>
  </div>
</div>
