<div class="d-flex flex-column bd-highlight mb-3">
<%= f.label :name, 'Nom de l\'objet'%>
<%= f.text_field :name, placeholder: "Brosse à dents", :maxlength=>"40", :minlength =>"2" %>
<%= f.label :description, 'Description de l\'objet' %>
<%= f.text_area :description, :rows=>"4", placeholder: "Cet objet est fabriqué ...", :maxlength=>"250", :minlength =>"20" %>
<%= f.label :price, 'Prix de l\'objet'  %>
<%= f.number_field(:price, in: 0.5..800.0, step: 0.5) %>
<%= f.label :available_quantity, 'Quantité disponible'  %>
<%= f.number_field(:available_quantity, in: 0..1000, step: 1) %>
<%= select_tag(:category_id, options_from_collection_for_select(Category.all, :id, :name)) %>

</div>
