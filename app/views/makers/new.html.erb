<div class="col-6 container ">
<h2 class= "p-4 text-center">Ouvrir un compte artisan</h2>

  <%= form_with url: makers_path, method: 'create' do |f| %>
  <div class="row">
   <div class="col-6">
     <%= f.label :prénom %>
   </div>
   <div class="col-6">
     <%= f.label :nom %>
   </div>
  </div>
  <div class="row">
   <div class="col-6">
     <%= f.text_field :first_name, class: "form-control", value: (@user.customer.address.first_name if @user.customer.address) %>
   </div>
   <div class="col-6">
     <%= f.text_field :last_name, class: "form-control",  value: (@user.customer.address.last_name if @user.customer.address) %>
   </div>
  </div>

  <div class="row">
   <div class="col">
     <%= f.label :adresse %>
   </div>
  </div>
  <div class="row">
   <div class="col">
     <%= f.text_field :address_line_1, class: "form-control", value: (@user.customer.address.address_line_1 if @user.customer.address) %>
   </div>
  </div>

  <div class="row">
   <div class="col-6">
     <%= f.label :code_postal %>
   </div>
   <div class="col-6">
     <%= f.label :ville %>
   </div>
  </div>
  <div class="row">
   <div class="col-6">
     <%= f.text_field :zip_code, class: "form-control", value: (@user.customer.address.zip_code if @user.customer.address) %>
   </div>
   <div class="col-6">
     <%= f.text_field :city, class: "form-control", value: (@user.customer.address.city if @user.customer.address) %>
   </div>
  </div>

  <%= f.label :address_line_2, 'Complément d\'adresse (optionnel)' %>
  <%= f.text_field :address_line_2, class: "form-control", value: (@user.customer.address.address_line_2 if @user.customer.address) %>


  <%= f.label :site_web %>
  <%= f.text_field :website, class: "form-control" %>

  <%= f.label :email_pro %>
  <%= f.text_field :email_pro, class: "form-control", value: (@user.email if @user) %>

  <%= f.label :description %>
  <%= f.text_area :description, class: "form-control" %>

  <%= f.hidden_field :user_id, :value => @user.id %>
  <%= f.hidden_field :operation, :value => 'create' %>

  <div class="actions mt-5">
    <%= f.submit "Valider", class: "btn btn-lg btn-info btn-block" %>
  </div>
  <%end%>
</div>
